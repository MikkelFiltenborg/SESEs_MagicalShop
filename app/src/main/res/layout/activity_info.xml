<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/info_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/info_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/menu_header_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Magic Item Name"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#530"
            android:fontFamily="sans-serif-black"
            />
    </LinearLayout>

    <!-- Image -->
    <LinearLayout
        android:id="@+id/info_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/info_layout_1"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/info_image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

    <!-- Description -->
    <LinearLayout
        android:id="@+id/info_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/info_layout_2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/info_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Magical item Description"
            android:textSize="28sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <!-- Buy Button -->
    <LinearLayout
        android:id="@+id/info_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            />

        <Button
            android:id="@+id/wares_magical_item_info_add_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#2DD"
            android:fontFamily="casual"
            android:textColor="@color/black"
            android:text="Buy"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</RelativeLayout>
